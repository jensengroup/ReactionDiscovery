#!/bin/sh
#SBATCH --job-name=0.8
#SBATCH --cpus-per-task=1
#SBATCH --ntasks=1
#SBATCH --error=/home/mariaharris/github/ReactionDiscovery/metadynamics_search/md//0.8\_%j.err
#SBATCH --output=/home/mariaharris/github/ReactionDiscovery/metadynamics_search/md//0.8\_%j.out
#SBATCH --time=100:00:00
#SBATCH --partition=mko
#SBATCH --no-requeue
#SBATCH --mem=3GB

cd 0.8
# Create scratch folder
mkdir /scratch/$SLURM_JOB_ID

export XTBHOME=/opt/xtb/6.1/xtb-190527/bin

ulimit -s unlimited
export OMP_STACKSIZE=3GB
export OMP_NUM_THREADS=1

sed -i "s/autoscale=/autoscale=0.8/g" md.inp

/opt/xtb/6.1/xtb-190527/bin/xtb 1.xyz --md --input md.inp --gfn2 > 0.8.out

cp xtb.trj ../0.8_md.trj
cd ..

# Remove scratch folder
rm -rf /scratch/$SLURM_JOB_ID

